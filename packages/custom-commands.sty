% Custom commands package for LaTeX
\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{custom-commands}[2024/01/01 Custom Commands Package]

% Basic formatting commands
\newcommand{\code}[1]{\texttt{#1}}
\newcommand{\file}[1]{\texttt{#1}}
% Avoid conflict with hyperref's \url; define only if not already defined
\providecommand{\url}[1]{\texttt{#1}}
% Also provide a dedicated code URL macro
\newcommand{\codeurl}[1]{\texttt{#1}}

% Mathematical commands
\newcommand{\R}{\mathbb{R}}
\newcommand{\N}{\mathbb{N}}
\newcommand{\Z}{\mathbb{Z}}
\newcommand{\C}{\mathbb{C}}
\newcommand{\Q}{\mathbb{Q}}

% Common mathematical operators
\newcommand{\abs}[1]{\left|#1\right|}
\newcommand{\norm}[1]{\left\|#1\right\|}
\newcommand{\inner}[2]{\langle #1, #2 \rangle}
\newcommand{\floor}[1]{\lfloor #1 \rfloor}
\newcommand{\ceil}[1]{\lceil #1 \rceil}

% Spacing commands (avoid conflicting with LaTeX primitives like \bigskip)
\newcommand{\BigSpace}{\vspace{1cm}}
\newcommand{\MedSpace}{\vspace{0.5cm}}
\newcommand{\SmallSpace}{\vspace{0.25cm}}

% Custom environments
\newenvironment{mybox}
{\begin{center}\begin{tabular}{|p{0.8\textwidth}|}\hline}
{\\\hline\end{tabular}\end{center}}

% Custom counters
\newcounter{mycounter}
\newcommand{\myitem}{\stepcounter{mycounter}\arabic{mycounter}. }

% End of package
\endinput
